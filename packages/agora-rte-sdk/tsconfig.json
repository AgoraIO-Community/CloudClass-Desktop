{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": ".code",
    "lib": ["dom", "es2017", "DOM.Iterable", "WebWorker"],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "allowJs": false
  },
  "files": [
    "src/index.ts",
    "src/declaration.d.ts"
  ],
  "exclude": ["node_modules", "dist", "es", "lib", "build", "examples"]
}