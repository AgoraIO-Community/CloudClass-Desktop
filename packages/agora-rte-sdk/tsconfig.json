{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "lib",
    "rootDir": "src",
    "lib": ["dom", "esnext", "DOM.Iterable", "webworker"],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "es", "lib", "build", "examples"]
}
