{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "lib",
    "lib": ["dom", "esnext", "DOM.Iterable", "WebWorker"],
    "moduleResolution": "node",
    "isolatedModules":true,
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "paths": {
      "agora-rte-sdk": ["../agora-rte-sdk/src"]
    },
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "es", "lib", "build", "examples"]
}
