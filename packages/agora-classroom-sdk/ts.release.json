{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "outDir": "lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~core": ["./src/core"],
      "~core/*": ["./src/core/*"],
      "~ui-kit": ["../agora-scenario-ui-kit/src"],
      "~ui-kit/*": ["../agora-scenario-ui-kit/src/*"],
      "~components": ["../agora-scenario-ui-kit/src/components"],
      "~scaffold": ["../agora-scenario-ui-kit/src/scaffold"],
      "~styles": ["../agora-scenario-ui-kit/src/styles"],
      "~utilities": ["../agora-scenario-ui-kit/src/utilities"],
      "~utilities/*": ["../agora-scenario-ui-kit/src/utilities/*"],
      "~components/*": ["../agora-scenario-ui-kit/src/components/*"],
      "~scaffold/*": ["../agora-scenario-ui-kit/src/scaffold/*"],
      "~capabilities/*": ["./src/ui-kit/capabilities/*"],
      "~capabilities": ["./src/ui-kit/capabilities"],
      "~capabilities/containers": ["./src/ui-kit/capabilities/containers"],
      "~capabilities/containers/*": ["./src/ui-kit/capabilities/containers/*"],
      "~capabilities/hooks": ["./src/ui-kit/capabilities/hooks"],
      "~capabilities/hooks/*": ["./src/ui-kit/capabilities/hooks/*"],
      "agora-rte-sdk": ["../agora-rte-sdk/src"],
      "agora-edu-core": ["../agora-edu-core/src"],
      "agora-widget-gallery": ["../agora-widget-gallery/src"],
      "agora-plugin-gallery": ["../agora-plugin-gallery/src"]
    },
    "downlevelIteration": true,
    "diagnostics": false,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*/*.stories.tsx"
  ]
}